<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <h4 class="container mt-4"><strong>Add Request</strong></h4>

    <div class="container mt-3">
      <div class="form-group">
        <% if (work_id) { %>
        <h5>work_id: <%= work_id %></h5>
        <% } %> <% if (works[0]) { %>
        <h5>work_id: <%= works[0].id %></h5>
        <div>title: <%= works[0].title %></div>
        <div>user_id: <%= works[0].user_id %></div>
        <div>work: <%= works[0].user_name %></div>
        <% } %>
      </div>
      <div>
        <label>former request id</label>
        <select name="" id="former-request-id" class="form-control">
          <option value="">None</option>
          <% for (var i =0; i < request_list.length; i++){ %>
          <option value="<%= request_list[i].request_id %>">
            <%= request_list[i].title %>
          </option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" id="title" />
      </div>

      <button type="submit" class="btn btn-outline-secondary" id="submit">
        Submit
      </button>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script>
      $("#submit").click(function () {
        former_request_id = $('#former-request-id').val()
        console.log(former_request_id)
        console.log("submit add request");
      });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
