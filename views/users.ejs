  <body>
    <%- include('navbar.html') %>
    <div>
      <h2 class="text-center">Users Data</h2>
      <% for (var i =0; i < users.length; i++){ %>
      <ul class="user-box" data-id="<%=users[i].user_id %>" class="list-group">
        <li class="list-group-item">
          <div class="row">
            <h5 class="mx-2"><%= users[i].user_id %></h5>
            <p class="mx-2"><%= users[i].user_name %></p>
            <p class="mx-2">(<%= users[i].department %>)</p>
            <button onclick="location.href ='/users/<%= users[i].user_id %>'" class="mx-2">more</button>
          </div>
        </li>
      </ul>

      <% } %>

      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

      <script>
      </script>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
